<Window x:Class="ContatoreAttivitàGiornaliera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContatoreAttivitàGiornaliera"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Input attività -->
            <RowDefinition Height="Auto"/> <!-- Lista attività -->
            <RowDefinition Height="Auto"/> <!-- Timer e controlli-->
            <RowDefinition Height="Auto"/> <!-- comppletamento e riepilogo-->
            <RowDefinition Height="*"/> <!--Spazio vuoto / espansione -->
        </Grid.RowDefinitions>
        <!-- Inserimento attività -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Label Content="Nome dell'attività:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtNome" Width="200" Margin="10,0"/>
            <Button x:Name="btnAggiungiAttività" Content="Aggiungi" Width="100" Height="30" Click="btnAggiungiAttività_Click" />
        </StackPanel>

        <!-- Lista attività -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <Label Content="Attività aggiunte:"/>
            <ListBox x:Name="lstAttivita" Height="120" Width="300"/>
        </StackPanel>

        <!-- Controlli timer -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <Button x:Name="btnAvvioTimer" Content="Avvia il timer" Width="100" Click="btnAvvioTimer_Click"/>
            <Label Content="Il tempo rimanente è:" VerticalAlignment="Center" Margin="10,0"/>
            <Label x:Name="lblTimer" Content="00:00" FontSize="24" Foreground="DarkRed" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Completamento e riepilogo -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,10,0,0">
            <Button x:Name="btnSegnaCompletata" Content="Segna Completata" Width="130" Click="btnSegnaCompletata_Click"/>
            <Button x:Name="btnRiepilogo" Content="Mostra Riepilogo" Width="130" Margin="10,0" Click="btnRiepilogo_Click"/>
        </StackPanel>
        <!-- Label attività completate -->
        <Label x:Name="lblCompletate" Content="Attività completate: 0" Grid.Row="4" FontWeight="Bold" FontSize="16"/>
         </Grid>
</Window>
